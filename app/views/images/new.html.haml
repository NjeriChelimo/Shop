= simple_form_for(:image, :url => {:action => 'create'},     :html => {:multipart => true}) do |f|
  = f.input :description
  = f.input :price
  = f.input :date_of_birth, :as => :date, :start_year => Date.today.year - 90,
                              :discard_day => true,
                              :order => [:day :month, :year]
  = f.hidden_field :picture_file_name
  = f.input :discount
  = f.file_field :picture
  = f.submit "Upload" 
