%h3 Home
- @users.each do |user|
  %p
  User: #{link_to user.name, organization_path(user.organization.id)}

%div#all_images
  - @organizations = Organization.all
  - @organizations.each do |organization|
    - @organization = organization
    - organization.org_no
    - @accounts = organization.accounts
    - @accounts.each do |account|
      - @account = account
      - if (@account.ac_type == "in")
        = link_to "#{@account.name}", account_path(@account.id)
        - @images = @account.images
        - @images.each do |image|
          %div#images-container.image
            = @account.name
            = @account.ac_type
            - @pic = image.id
            = image_tag image.picture.url(:large)
            %a(href="#" data-reveal-id="#{@pic}myModal" data-animation="fade" data-animationspeed="100" data-closeonbackgroundclick="true" data-dismissmodalclass="close-reveal-modal") Image Details

            %div.reveal-modal(id="#{@pic}myModal")
              %h1
                = account.name
              %p
                = image_tag image.picture.url(:large)
              %p
                = image.price
              %p
                = image.description
              %p
                = image.expiry
              %p
                = link_to "More goodies.. :)", account_path(@account.id)
              %p
                %a.close-reveal-modal &#215;
